<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>configurations</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>../</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>integration_tests/postman/collection</directory>
            <outputDirectory>postman/collection</outputDirectory>
            <includes>
                <include>*.postman_collection.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>integration_tests/postman/environments</directory>
            <outputDirectory>postman/environments</outputDirectory>
            <includes>
                <include>*.postman_environment.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>integration_tests/keycloak</directory>
            <outputDirectory>keycloak/</outputDirectory>
            <includes>
                <include>*.md</include>
                <include>*.json</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>